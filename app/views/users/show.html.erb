<div class="row profile-header">
  <% if @user.name == "Nope" %>
    <div class="user-avatar">Profile Image</div>
  <% else %>
    <%= image_tag("users/placeholder-avatar.png", :alt => "placeholder profile image", :class => "user-avatar") %>
  <% end %>
  <div id="user-name" class="center"><%= @user.name %></div>
  <!--Button to trigger new game modal-->
  <div class="col">
    <button id="new-game-button" type="button" class="btn btn-primary" data-toggle="modal" data-target="#newgame">
      New Game
    </button>
  </div>
</div>

<div id= "games" class="row">
</div>

<!-- New Game Modal -->
<div class="modal fade" id="newgame" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Game</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save Game</button>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/profile_header' %>

<% if (!current_user.friends.include?(@user) || !@user.friends.include?(current_user)) && current_user != @user %>
  You need to be friends with someone in order to see their games.
  <%= link_to 'Send Friend Request', api_v1_friendships_url(user_id: @user.id), method: :post, class: 'btn btn-primary btn-sm' %>
<% else %>
  <% if @user.games.any? %>
    <%= react_component("game_list") %>
  <% end %>
<% end %>

<!-- New Game Modal -->
<div class="modal fade" id="newGame" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Game</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="modal-container">
          <form>
            <div class="form-row">
              <div class="col">
                <input type="text" class="form-control" placeholder="Search BGG" id="searchTerm">
              </div>
              <div class="col">
                <button class="btn btn-primary" id="bggSearch">Search</button>
              </div>
            </div>
            <div class="form-row">
              <div class="col-md-4 mb-3">
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="searchBoardGames" checked onclick="updateGames()">
                  <label class="custom-control-label" for="searchBoardGames">Base Games</label>
                </div>
              </div>
              <div class="col-md-4 mb-3">
                <div class="custom-control custom-checkbox">
                  <input type="checkbox" class="custom-control-input" id="searchExpansions" checked onclick="updateExpansions()">
                  <label class="custom-control-label" for="searchExpansions">Expansions</label>
                </div>
              </div>
            </div>
          </form>
          <div>
            <h5 id="resultsHeader"></h5>
            <table id="searchResults"></table>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<%= render 'games/gameDetailsModal' %>
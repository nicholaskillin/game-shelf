<!-- Game Details Modal -->
<div class="modal fade" id="gameDetailsModal" tabindex="-1" role="dialog" aria-labelledby="gameDataModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="gameDataTitle">Game Name</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <img class="game-data-image" src="" alt="game-artwork" id="gameDetailsArtwork">
            <div style="overflow: auto">
              <ul class="game-data-list">
                <li id="gameDataPlayerCount"></li>
                <li id="gameDataPlayTime"></li>
                <li id="year-published"></li>
              </ul>
            </div>
          </div>
          <div class="row" id="gameDetailsCatMech">
            <div class="col">
              <h5>Categories</h5>
              <ul id="game-categories">
              </ul>
            </div>
            <div class="col">
              <h5>Mechanics</h5>
              <ul id="game-mechanics">
              </ul>
            </div>
          </div>
          <div class="game-data-description" id="gameDetailsDescription">
            <h5>Description</h5>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>